<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="root" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LibraryApp.ResultsController">
    <children>
        <BorderPane prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <center>
                <TableView fx:id="tableView" prefHeight="400.0" prefWidth="600.0" BorderPane.alignment="CENTER">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                    <columns>
                        <TableColumn fx:id="nameCol" prefWidth="75.0" text="Book Name" />
                        <TableColumn fx:id="authorCol" prefWidth="75.0" text="Author" />
                        <TableColumn fx:id="publisherCol" prefWidth="75.0" text="Publisher" />
                        <TableColumn fx:id="topicsCol" prefWidth="75.0" text="Topics" />
                        <TableColumn fx:id="availabilityCol" prefWidth="75.0" text="Availability" />
                        <TableColumn fx:id="viewBookCol" prefWidth="75.0" />
                    </columns>
                </TableView>
            </center>
            <top>
                <ButtonBar prefHeight="51.0" prefWidth="599.0" BorderPane.alignment="TOP_CENTER">
                    <buttons>
                        <Button maxWidth="100.0" mnemonicParsing="false" onAction="#home" prefHeight="25.0" prefWidth="20.0" text="Home" translateX="40.0" ButtonBar.buttonData="LEFT" />
                  <Label maxWidth="130.0" prefHeight="17.0" text="Showing results for:">
                     <padding>
                        <Insets left="15.0" />
                     </padding>
                  </Label>
                        <Label fx:id="search" maxWidth="100.0" prefHeight="17.0" text="Label" />
                        <Button mnemonicParsing="false" onAction="#search" prefHeight="33.0" prefWidth="204.0" text="Search" translateX="-40.0" BorderPane.alignment="CENTER">
                            <graphic>
                                <TextField fx:id="newSearch" />
                            </graphic>
                        </Button>
                    </buttons>
                </ButtonBar>
            </top>
        </BorderPane>
    </children>
</AnchorPane>
